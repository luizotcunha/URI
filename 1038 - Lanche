#include<stdio.h>

int main(){
  int cod, qu;
  
  scanf("%d %d",&cod,&qu);
  
  switch(cod){
    case 1 :
      printf("Total: R$ %.2lf\n",qu*4.00);
      break;
    
    case 2 :
      printf("Total: R$ %.2lf\n",qu*4.50);
      break;
  
    case 3 :
      printf("Total: R$ %.2lf\n",qu*5.00);
      break;      
    
    case 4 :
      printf("Total: R$ %.2lf\n",qu*2.00);
      break;      
    
    case 5 :
      printf("Total: R$ %.2lf\n",qu*1.50);
      break;      
  }
  



  return 0;
}
